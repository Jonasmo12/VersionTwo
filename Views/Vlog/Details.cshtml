@model VersionTwo.Models.Vlog

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 mb-3">
            <div class="embed-container">
                <iframe src="@Html.DisplayFor(model => model.VideoUrl)" title="@Html.DisplayFor(model => model.Title)" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>

        <div class="col-lg-12">
            <p>@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
</div>


<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            @* <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> | *@
            <a asp-controller="Home" asp-action="Index">Return Home</a>
        </div>
    </div>
</div>


<style>
    .embed-container {
        position: relative;
        height: 65vh;
        overflow: hidden;
        max-width: 100%;
    }

    .embed-container iframe, .embed-container object .embed-container embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>